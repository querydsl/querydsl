<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC
   "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
   "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping default-access="field" package="com.querydsl.jpa.domain13">
  <class name="Entity">
    <id name="id">
      <generator class="native"/>
    </id>

    <property name="status">
      <type name="org.hibernate.type.EnumType">
         <param name="enumClass">com.querydsl.jpa.domain13.Status</param>
      </type>
    </property>
  </class>
</hibernate-mapping>