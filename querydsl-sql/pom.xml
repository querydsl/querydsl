       -->
    </plugins>
  </build>

  <profiles>
    <profile>
      <id>teradata</id>
      <dependencies>
        <dependency>
          <groupId>com.teradata</groupId>
          <artifactId>teradata-jdbc</artifactId>
          <version>${teradata.version}</version>
          <scope>test</scope>
        </dependency>
        <dependency>
          <groupId>com.teradata</groupId>
          <artifactId>teradata-config</artifactId>
          <version>${teradata.version}</version>
          <scope>test</scope>
        </dependency>
      </dependencies>
    </profile>
  </profiles>

</project>
